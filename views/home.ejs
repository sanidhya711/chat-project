<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="icon" href="/favicon.png">
    <script src="https://use.fontawesome.com/d4dcb4c71a.js"></script>
    <script src="https://unpkg.com/peerjs@1.3.1/dist/peerjs.min.js"></script>
    <link rel="stylesheet" href="home.css">
    <script src="/socket.io/socket.io.js"></script>
</head>
<body>
    <div class="left-navbar">
        <a href="/"><i class="fa fa-2x fa-home" aria-hidden="true"></i></a>
        <a href="/about" class="fa fa-2x fa-info" aria-hidden="true"></a>
        <i class="fa fa-2x fa-user-circle-o" aria-hidden="true"></i>
        <i class="fa fa-2x fa-cog" aria-hidden="true"></i>
        <a class="sign-out-holder" href="/logout"><i class="fa fa-2x fa-sign-out" aria-hidden="true"></i></a>
    </div>
    <div class="users">
        <h3>Conversations</h3>
        <input placeholder="Search User" class="search-user" type="search">
        <div class="gradient-short"></div>
        <div class="users-inner">
            <% users.forEach(function(name){%>
                <% if(username!=name.username){%>
                    <a class="user <%= name.username %>" href="/chats/<%=name.username%>"> 
                        <img class="pfp" src="<%= name.pfp %>">
                        <h5><%= name.username %></h5>
                    </a>
            <% } %>
            <%})%>
        </div>

        <div class="user-self"> 
            <img class="pfp" src="<%= pfp %>">
            <h4><%= username %></h4>
        </div>

</div>

    <div class="settings">
        <h1>Settings/Preferences</h1>

        <div class="settings-inner">
            <h4>These buttons dont work right now... will fix it later</h4>
            <h5>- Sanidhya</h5>
            <br>
            <div class="toggle-holder">
                <h3>Notifications</h3>
                <label class="toggle-control">
                    <input type="checkbox">
                    <span class="control"></span>
                </label>
            </div>
            <br>
            <div class="toggle-holder">
                <h3>Color Theme</h3>
                <label class="toggle-control">
                    <input type="checkbox" checked="checked">
                    <span class="control"></span>
                </label>
            </div>
            <br>
            <div class="toggle-holder">
                <h3>Chat Filter</h3>
                <label class="toggle-control">
                    <input type="checkbox">
                    <span class="control"></span>
                </label>
            </div>
            <br>
            <div class="danger-buttons">
                <div class="btn btn-danger">Logout</div>
                <button  class="btn btn-danger">Delete Account</button>
            </div>
        </div>
    </div>
    <div class="<%= username %>" id="username"></div>
    <script defer src="/home.js"></script>
    <script defer src="/registerServiceWorker.js"></script>
</body>
</html>